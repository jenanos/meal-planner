{
  "extends": "@repo/typescript-config/base.json",
  "references": [
    {
      "path": "../database"
    }
  ],
  "compilerOptions": {
    "noImplicitAny": false,
    "composite": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "moduleResolution": "Node"
    // use defaults for declaration in composite project
    // paths removed - using package.json exports and project references instead
  },
  "include": [
    "src"
  ],
  "exclude": [
    "test",
    "dist"
  ]
}