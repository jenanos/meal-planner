{
  "extends": "@repo/typescript-config/base.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "tsup.config.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2018",
      "ES2020"
    ],
    "types": [
      "node"
    ],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}