{
  "extends": "@repo/typescript-config/base.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "generated"
  ],
  "compilerOptions": {
    "composite": true,
    "outDir": "dist",
    "rootDir": "src",
    "target": "ES2020",
    "lib": [
      "ES2018",
      "ES2020"
    ],
    "types": [
      "node"
    ],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}